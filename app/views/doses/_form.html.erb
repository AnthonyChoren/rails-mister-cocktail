<%= simple_form_for(@dose) do |f| %>
  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.active.order(:name), prompt: "Choose an ingredient" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Cancel', cocktail_path , class: 'btn btn-danger ml-2' %>

  </div>
<% end %>
