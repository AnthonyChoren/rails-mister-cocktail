<div class="container text-center">
  <h1><%= @cocktail.name %></h1>
</div>
<div class="more_padding">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3>Recipe</h3>
        <table class="table table-bordered">
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Description</th>
              <th>Action</th>
            </thead>
            <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to cocktail_dose_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'new dose', new_cocktail_dose_path(@cocktail),:class => 'btn btn-primary'%>
      </div>
    </div>
    <br/>
    <%= link_to 'Back', cocktails_path, :class => 'btn btn-danger ml-2' %>
  </div>
</div>

